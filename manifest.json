{
  "manifest_version": 3,
  "name": "Discord Message Compiler",
  "version": "1.1.0",
  "description": "Minimal message compiler with optional Discord timestamp and webhook sender (Side Panel).",
  "permissions": ["storage", "sidePanel"],
  "host_permissions": [
    "https://discord.com/api/webhooks/*",
    "https://discordapp.com/api/webhooks/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Compiler"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "options_page": "options.html"
}
